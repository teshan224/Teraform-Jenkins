pipeline {
    agent any
    environment {
        TF_VERSION = "1.6.6"
        TF_ROOT = "."
    }

    stages {
        stage('Validate') {
            steps {
                sh '''
                  curl -o terraform.zip https://releases.hashicorp.com/terraform/${TF_VERSION}/terraform_${TF_VERSION}_linux_amd64.zip
                  unzip terraform.zip
                  sudo mv terraform /usr/local/bin/
                  terraform -version

                  cd ${TF_ROOT}
                  terraform init -input=false
                  terraform validate
                '''
            }
        }

        stage('Plan') {
            steps {
                sh '''
                  cd ${TF_ROOT}
                  terraform init -input=false
                  terraform plan
                '''
            }
        }

        stage('Apply') {
            steps {
                script {
                    input message: 'Do you want to apply these changes?', ok: 'Apply Now'
                }
                sh '''
                  cd ${TF_ROOT}
                  terraform init -input=false
                  terraform apply -auto-approve
                '''
            }
        }
    }
}
