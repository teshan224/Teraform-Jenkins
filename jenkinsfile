pipeline {
    agent any

    environment {
        TF_ROOT = "."
    }

    stages {
        stage('Validate') {
            steps {
                sh '''
                  cd ${TF_ROOT}
                  terraform init -input=false
                  terraform validate
                '''
            }
        }

        stage('Plan') {
            steps {
                sh '''
                  cd ${TF_ROOT}
                  terraform plan
                '''
            }
        }

        stage('Apply') {
            steps {
                script {
                    // Manual approval step
                    input message: 'Do you want to apply these changes?', ok: 'Apply Now'
                }
                sh '''
                  cd ${TF_ROOT}
                  terraform apply -auto-approve
                '''
            }
        }
    }
}
